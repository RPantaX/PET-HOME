@model PetHome.Models.Usuario
<style>
   #formLogin {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .subformLogin {
        padding-right: 29%;
        padding-left: 29%;
    }
</style>
@{
    ViewBag.Title = "login";
}

<h2>Inicia Sesión</h2>

<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="subformLogin">
    <br />
    <div class="form-control" id="formLogin">
        <div class="form-horizontal">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <pm>Usuario</pm>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nomUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nomUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <pm>Contraseña</pm>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.contrasenia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.contrasenia, "", new { @class = "text-danger" })
                </div>
            </div>
            @ViewBag.mensaje
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>
            </div>
            <br />
        </div>
    </div>
    <br />
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}